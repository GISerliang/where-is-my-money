{
  //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
  "pages": [{
    "path": "pages/tabbar/recordpage/index",
    "style": {
      "navigationBarTitleText": "小本本",
      "enablePullDownRefresh": true,
      "app-plus": {
        "bounce": "none"
      }
    }
  }, {
    "path": "pages/tabbar/statisticpage/index",
    "style": {
      "navigationBarTitleText": "贡献值",
      "enablePullDownRefresh": true
    }
  }, {
    "path": "pages/tabbar/ownpage/index",
    "style": {
      "navigationBarTitleText": "我的天"
    }
  }, {
    "path": "pages/newrecordpage/index",
    "style": {
      "navigationBarTitleText": "记一下"
    }
  }, {
    "path": "pages/about/index",
    "style": {
      "navigationBarTitleText": "关于",
      "enablePullDownRefresh": false
    }
  }, {
    "path": "pages/project/index",
    "style": {
      "navigationBarTitleText": "项目列表",
      "enablePullDownRefresh": false
    }
  }, {
    "path": "pages/feedback/index",
    "style": {
      "navigationBarTitleText": "意见反馈",
      "enablePullDownRefresh": false
    }
  }],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "钱去哪了",
    "navigationBarBackgroundColor": "#FFF",
    "backgroundColor": "#F8F8F8"
  },
  "tabBar": {
    "list": [{
      "pagePath": "pages/tabbar/recordpage/index",
      "text": "小本本",
      "iconPath": "static/img/tabbar/record.png",
      "selectedIconPath": "static/img/tabbar/record-sel.png"
    }, {
      "pagePath": "pages/tabbar/statisticpage/index",
      "text": "贡献值",
      "iconPath": "static/img/tabbar/statistic.png",
      "selectedIconPath": "static/img/tabbar/statistic-sel.png"
    }, {
      "pagePath": "pages/tabbar/ownpage/index",
      "text": "我的天",
      "iconPath": "static/img/tabbar/own.png",
      "selectedIconPath": "static/img/tabbar/own-sel.png"
    }],
    "color": "#000000",
    "selectedColor": "#6190e8",
    "backgroundColor": "#ffffff"
  },
  "condition": { //模式配置，仅开发期间生效
    "current": 0, //当前激活的模式(list 的索引项)
    "list": [{
      "name": "", //模式名称
      "path": "", //启动页面，必选
      "query": "" //启动参数，在页面的onLoad函数里面得到
    }]
  }
}
